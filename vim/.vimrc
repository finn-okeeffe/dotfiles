set nocompatible

syntax on
filetype plugin indent on

set modelines=0
set ruler

set encoding=utf-8

set wrap

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

set number
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent 

set termguicolors

set clipboard=unnamedplus

" set cursorline


" let mapleader=" "

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv
